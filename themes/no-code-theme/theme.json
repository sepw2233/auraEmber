{
    "version": 2,
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "settings": {
        "appearanceTools": true,
        "useRootPaddingAwareAlignments": true,
        "color": {
            "palette": [
                {
                    "slug": "black",
                    "color": "#1e1e1e",
                    "name": "black"
                },
                {
                    "slug": "white",
                    "color": "#f0f0f0",
                    "name": "white"
                },

                {
                    "slug": "header",
                    "color": "#b1a79c",
                    "name": "Header"
                },
                {
                    "slug": "background",
                    "color": "#e9cac8",
                    "name": "background"
                },
                {
                    "slug": "secondary",
                    "color": "#c37e95",
                    "name": "Secondary"
                },
                {
                    "slug": "button",
                    "color": "#e79fb5",
                    "name": "buuton"
                },
                {
                    "slug": "text",
                    "color": "#0c0f17",
                    "name": "text"
                },
            
                {
                    "slug": "transparent",
                    "color": "transparent",
                    "name": "transparent"
                }
            ]
            
        },
        "layout": {
            "contentSize": "1400px",
            "wideSize": "1800px"
        },
        "spacing": {
            "units": [ "px", "em", "rem", "vh", "vw", "%" ]
        },
        "typography": {
            "fontFamilies": [
                {
                    "name": "System (Roboto, Segoe UI, Ubuntu)",
                    "slug": "system",
                    "fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif"
                }
            ]
        }
    },
    "styles": {
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--system)"
        },
        "color": {
            "background": "var(--wp--preset--color--background)",
            "text": "var(--wp--preset--color--text)"
        },
    
	"blocks": {
			  "core/paragraph": {
				"typography": {
				  "fontSize": "16px",
				  "lineHeight": "1.8"
				},
				"color": {
				  "text": "var(--wp--preset--color--primary-text)"
				},
				"spacing": {
				  "padding": {
					"top": "15px",
					"right": "25px",
					"bottom": "15px",
					"left": "25px"
				  }
				}
			  },
			  "core/heading": {
				"typography": {
				  "fontSize": "28px",
				  "fontWeight": "600"
				},
				"color": {
				  "text": "var(--wp--preset--color--heading-text)"
				},
				"spacing": {
				  "padding": {
					"top": "15px",
					"right": "25px",
					"bottom": "15px",
					"left": "25px"
				  }
				}
			  },
			  "core/list": {
				"typography": {
				  "fontSize": "14px"
				},
				"color": {
				  "text": "var(--wp--preset--color--list-text)"
				},
				"spacing": {
				  "padding": {
					"top": "10px",
					"right": "25px",
					"bottom": "10px",
					"left": "25px"
				  }
				}
			  },
			  "core/quote": {
				"typography": {
				  "fontSize": "18px",
				  "fontStyle": "normal"
				},
				"color": {
				  "text": "var(--wp--preset--color--quote-text)"
				},
				"spacing": {
				  "padding": {
					"top": "15px",
					"right": "25px",
					"bottom": "15px",
					"left": "25px"
				  }
				}
			  },
			  "core/post-title": {
				"color": {
				  "text": "var(--wp--preset--color--post-title-text)"
				},
				"spacing": {
				  "padding": {
					"top": "10px",
					"right": "25px",
					"bottom": "10px",
					"left": "25px"
				  }
				}
			  },
			  "core/pullquote": {
				"typography": {
				  "fontSize": "22px",
				  "fontStyle": "normal"
				},
				"color": {
				  "text": "var(--wp--preset--color--pullquote-text)"
				},
				"spacing": {
				  "padding": {
					"top": "15px",
					"right": "25px",
					"bottom": "15px",
					"left": "25px"
				  }
				}
			  },
			  "core/button": {
				"color": {
				  "background": "var(--wp--preset--color--button-background)",
				  "text": "var(--wp--preset--color--button-text)"
				}
			  },
			  "core/template-part": {
				"color": {
				  "background": "var(--wp--preset--color--template-background)"
				}
			  }
			}
	},

    "templateParts": [
        {
            "area": "header",
            "title": "Header",
            "name": "Header"    
        },
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
    ]
    
    }


	
